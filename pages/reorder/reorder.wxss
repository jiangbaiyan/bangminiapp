@import '../../style/xiaomi.wxss';
page{
  background-color: #F5F5F5;
  padding: 20rpx;
  box-sizing:border-box;
}
.container{
  background: white;
  width: 100%;
  height: 100%;
  padding-top: 60rpx;
  padding-bottom: 30rpx;
}
.HeadVie{
  width: 100%;
  height: 100%;
}
.PicVie{
  display: flex;
  justify-content: center
}
.statusVie{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.status{
  font-size: 34rpx;
  font-weight: bolder;
}
.HeadPic{
  border-radius: 150rpx;
  width: 150rpx;
  height: 150rpx;
}
.bindStatusVie{
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.bindStatus{
  font-family: 'MI LANTING';
  font-size:30rpx;
  padding: 0rpx;
