@import '../../style/xiaomi.wxss';
.container{
 height: 100%; 
 display: flex; 
 padding: 0; 
 box-sizing: border-box; 
 margin-top: 40rpx;
 margin-left: 50rpx;
 margin-right: 50rpx;
 border-color: #DC143C;
 border-width: 2rpx;
 border-radius: 30rpx;
 border-style: solid;
}
.headview{
  padding-top: 14rpx;
  display: flex;
  width: 100%;
  padding-bottom: 8rpx;
}
.title{
  font-size: 34rpx;
  margin-left: 24rpx;
  width: 60%;
font-family: 'MI LANTING';
}
.money{
  font-size: 28rpx;
  color: #DC143C;
  width: 40%;
  margin-right: 24rpx;
  text-align: right;
 font-family: 'MI LANTING';
}
.redline{
  color: #DC143C;
  width: 100%;
  border-width: 2rpx;
  border-top-style: dotted;
}
.right .star {
  float: left;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  padding: 48rpx 2rpx;
}
.star image{
  width: 52rpx;
  height: 52rpx;
}
.mainwordsview{
  width: 100%;
  padding-top: 12rpx;
  padding-left: 16rpx;
  text-align: left;
}
.mainwords{
  font-size: 26rpx;
  margin-left: 20rpx;
  font-family: 'MI LANTING';
  
}
.evaluate{
  font-family: 'MI LANTING';
  width: 500rpx;
  height: 200rpx;
  font-size: 26rpx;
}
.addpicture{
  width: 100%;
  padding-right: 60rpx;
  text-align: right;
  padding-bottom: 20rpx;
}
.evaluatepicture{
  width: 120rpx;
  height: 100rpx;
}
.content{
  display: flex;
  height: 200rpx;
  width: 100%;
}
.leftpicture{
  padding: 16rpx;
  width: 35%;
  height: 168rpx;
}
.contentpicture{
  width: 100%;
  height: 100%;
}
.rightwords{
  padding: 16rpx;
  width: 100%;
  height: 168rpx;
}
.miancontent{
  font-family: 'MI LANTING';
  width: 100%;
  height: 60%;
  font-size: 24rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.time{
  width: 100%;
  height: 40%;
}
.startview{
  font-family: 'MI LANTING';
  font-size: 22rpx;
  height: 50%;
  padding-left: 250rpx;
  color: #969696
}
.endview{
  font-family: 'MI LANTING';
  font-size: 22rpx;
  height: 50%;
  padding-left: 250rpx;
  color: #969696;
}
.submit{
  margin-top: 80rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
}
.submitbut{
  font-family: 'MI LANTING';
  height: 100rpx;
  font-size: 38rpx;
  border-radius:30rpx;
}


