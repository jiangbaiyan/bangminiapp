@import '../../style/xiaomi.wxss';
    .navbar{  
      flex: none;  
      display: flex;  
      background: #fff;  
      font-family: 'MI LANTING';
    }  
    .navbar .item{  
      position: relative;  
      flex: auto;  
      text-align: center;  
      line-height: 80rpx;  
      color:  	#CCCCCC
    }  
    .navbar .item.active{  
      color: black;  
    }
    .segments{
  
     height:80rpx;
      background: #f6f6f6;
      white-space: nowrap;
      font-size:30rpx;
     top: 0;
     z-index:1;
      width: 100%
    }
    .navbar .item.active:after{  
      content: "";  
      display: block;  
      position: absolute;  
      bottom: 0;  
      left: 0;  
      right: 0;  
      height: 2px;  
      background: #000;  
     } 
